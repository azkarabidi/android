<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">
<!--linear layout android orientation vertical and

image view
linear layout kena ada tag

ada lagi relative layout
deign jadi overlap
-->

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"


        android:layout_marginTop="3dp"
        android:text="@string/hello"
        android:textAlignment="center" />
    <!--cboleh add jpg image-->

    <ImageView
        android:id="@+id/astro"
        android:layout_width="394dp"
        android:layout_height="327dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-1dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_astronaut" />

    <Button
        android:id="@+id/button"
        android:layout_width="397dp"
        android:layout_height="69dp"
        android:layout_below="@id/et_view"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"

        android:backgroundTint="#E47E25"
        android:text="HA HA HA"
        android:textAlignment="center"

        android:textColor="#FFFF" />

    <EditText
        android:id="@+id/et_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/astro"
        android:layout_margin="16dp"
        android:hint="Insert Text Here"


        />

</RelativeLayout>